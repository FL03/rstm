# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = false
quote_type = double
trim_trailing_whitespace = false

[*.{json,yaml,yml,toml}]
indent_size = 2

[*.md]
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
